<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.francisauwerda.djairhorn.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:padding="20dp">
        <Button
            android:id="@+id/bt_max_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_max_volume"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_weight="0.3">
        <ImageView
            android:id="@+id/iv_african"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/african_kids_dancing_funny_image"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="8dp">

        <Button
            android:id="@+id/siren_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/siren_button" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trump"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/colorAccent"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_trump"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/african_kids_dancing_funny_image"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>
